{
  "name": "bcbailey-resume",
  "type": "module",
  "version": "1.0.0",
  "author": "Bradley C Bailey <brad@memoryleak.org>",
  "repository": "github:bcbailey/resume",
  "private": true,
  "scripts": {
    "watch": "chokidar resume.yaml 'templates/**/*' 'assets/**/*' -c 'npm run build'",
    "build": "mkdir -p output/resume && cp resume.yaml output/ && cp -R assets/* output/resume/ && node build.js",
    "clean": "rm -rf output",
    "lint": "eslint --fix *.js",
    "pretest": "npm run lint",
    "test": "node test.js"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ejs": "^3.1.8",
    "lodash": "^4.17.21",
    "puppeteer": "^24.23.0",
    "word-wrap": "^1.2.4",
    "yaml": "^2.2.2"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.37.0",
    "eslint-plugin-node": "^11.1.0",
    "micromark": "^4.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
